<script>
	gsap.registerPlugin(ScrollTrigger);
	import gsap from "gsap";
	import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.to(".coin", {
        scrollTrigger: {
            trigger: ".containder-coin",
            scrub: true,
			start: 'top center',
            end: '+=2000',
        },
        rotation: 1500,
        ease: "none",
    });
	console.log("ScrollTrigger", ScrollTrigger);
</script>